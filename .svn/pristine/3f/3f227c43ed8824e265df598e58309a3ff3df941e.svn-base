<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >
    <ScrollView  
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
         android:orientation="vertical"
        >
     <RelativeLayout 
		        style="@style/usercenter_layout_top"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:paddingTop="15dip">
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="40dip"
		            android:gravity="center"
		            android:textColor="#000000"
		            android:textSize="16sp"
		            android:text="@string/login_name"/>
		        <EditText 
		            android:id="@+id/regist_username"
		            android:layout_width="210dip"
		            android:layout_alignParentRight="true"
		            android:layout_height="40dip"
		            android:gravity="left|center_vertical"
		            android:background="@null"
		            android:singleLine="true"
		            android:paddingLeft="5dip"
		            android:maxEms="64"
		            android:textColor="#000000"
		            android:textSize="16sp"
		            android:maxLength ="10"
		            android:hint="@string/login_name_editText"/>
		    </RelativeLayout>

    	  <RelativeLayout 
		        style="@style/usercenter_layout_middle"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:paddingTop="15dip">
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="40dip"
		            android:layout_marginTop="-14dip"
		            android:gravity="center"
		            android:textColor="#000000"
		            android:textSize="16sp"
		            android:text="@string/login_password"/>
		         <EditText 
		            android:id="@+id/regist_password"
		            android:layout_height="40dip"
		           	android:layout_width="210dip"
		            android:layout_alignParentRight="true"
		            android:gravity="left|center_vertical"
		            android:background="@null"
		            android:singleLine="true"
		            android:paddingLeft="5dip"
		            android:inputType="textPassword"
		            android:maxEms="16"
		            android:maxLength ="15"
		            android:textColor="#000000"
		            android:layout_marginTop="-14dip"
		            android:textSize="16sp"
		            android:hint="@string/login_password_editText"/>
		    </RelativeLayout>
		      <RelativeLayout 
		        style="@style/usercenter_layout_middle"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:paddingTop="15dip">
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="40dip"
		            android:layout_marginTop="-14dip"
		            android:gravity="center"
		            android:textColor="#000000"
		            android:textSize="16sp"
		            android:text="@string/regist_password"/>
		        <EditText 
		            android:id="@+id/confirmat_password"
		            android:layout_height="40dip"
		            android:layout_width="210dip"
		            android:layout_marginTop="-14dip"
		            android:layout_alignParentRight="true"
		            android:gravity="left|center_vertical"
		            android:background="@null"
		            android:singleLine="true"
		            android:inputType="textPassword"
		            android:paddingLeft="5dip"
		            android:maxEms="64"
		            android:textColor="#000000"
		            android:textSize="16sp"
		            android:maxLength ="15"
		            android:hint="@string/regist_password_editText"/>
		    </RelativeLayout>
		      <RelativeLayout 
		        style="@style/usercenter_layout_middle"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:paddingTop="15dip">
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="40dip"
		            android:gravity="center"
		            android:layout_marginTop="-14dip"
		            android:textColor="#000000"
		            android:textSize="16sp"
		            android:text="@string/regist_recommended"/>
		        <EditText 
		            android:id="@+id/recommend_edit"
		            android:layout_height="40dip"
		            android:layout_marginTop="-14dip"
		            android:layout_width="210dip"
		            android:layout_alignParentRight="true"
		            android:gravity="left|center_vertical"
		            android:background="@null"
		            android:singleLine="true"
		            android:inputType="textEmailAddress"
		            android:paddingLeft="5dip"
		            android:maxEms="64"
		            android:textColor="#000000"
		            android:textSize="16sp"
		            android:maxLength ="10"
		            android:hint="@string/regist_recommended_editText"/>
		    </RelativeLayout>
		      <RelativeLayout 
		        style="@style/usercenter_layout_bottom"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:paddingTop="15dip">
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="40dip"
		            android:gravity="center"
		            android:textColor="#000000"
		            android:textSize="16sp"
		            android:layout_marginTop="-14dip"
		            android:text="@string/regist_email"/>
		        <EditText 
		            android:id="@+id/email_edit"
		            android:layout_height="40dip"
		            android:layout_marginTop="-14dip"
		            android:layout_width="210dip"
		            android:layout_alignParentRight="true"
		            android:gravity="left|center_vertical"
		            android:background="@null"
		            android:singleLine="true"
		            android:inputType="textEmailAddress"
		            android:paddingLeft="5dip"
		            android:maxEms="64"
		            android:textColor="#000000"
		            android:textSize="16sp"
		            android:hint="@string/regist_email_editText"/>
		    </RelativeLayout>
		    
		      <RelativeLayout
		         android:id="@+id/birthdayLayout"
		         style="@style/layout_bg_single"
		         android:layout_height="wrap_content"
		         android:layout_width="fill_parent"
		         android:paddingTop="20dip"
		         android:gravity="center_horizontal"
		         >
		        <TextView
		            android:id="@+id/childbirth"
		            android:layout_height="wrap_content"
		            android:layout_width="wrap_content"
		            android:hint="@string/regist_childbirth"
		            android:textSize="16sp"
		            android:gravity="center_horizontal"
		            android:layout_marginTop="-4dip"
		            android:textColor="#000000"
		            />
		     </RelativeLayout>
		      
		      <RelativeLayout
		         android:layout_height="wrap_content"
		         android:layout_width="fill_parent"
		         android:paddingTop="10dip"
		         android:paddingBottom="80dip"
		         android:gravity="center_horizontal"
		         >
		        <Button
		            android:id="@+id/registButton"
		            android:layout_height="wrap_content"
		            android:layout_width="wrap_content"
		            android:background="@anim/login_button"
		            android:text="@string/regist_button"
		            android:textSize="18sp"
		            android:textColor="@anim/font_white_black"
		            />
		     </RelativeLayout>
		    </LinearLayout>
		    </ScrollView>
</LinearLayout>