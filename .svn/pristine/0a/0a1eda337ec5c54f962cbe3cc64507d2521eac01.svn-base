<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light">
        <item name="android:windowTitleBackgroundStyle">@style/titleBg</item>
        <item name="android:windowTitleSize">36dp</item>
        <item name="android:windowTitleStyle">@style/titleText</item>
    </style>

    <style name="titleBg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/base_top_red_bg</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="titleText">
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">#00000000</item>
    </style>

    <style name="base_bottom_title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="base_top_middle_title">
        <item name="android:textSize">20sp</item>
        <item name="android:shadowColor">#FFFFFF</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:visibility">gone</item>
        <item name="android:maxLength">10</item>
        <item name="android:shadowDy">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="base_top_btn">
        <item name="android:textSize">14sp</item>
        <item name="android:shadowColor">#4F4F4F</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:textColor">@anim/font_white_black</item>
        <item name="android:visibility">gone</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="index_price">
        <item name="android:background">#88FF0000</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="activity_name">
        <item name="android:background">#00000000</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:singleLine">false</item>
        <item name="android:minLines">1</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="activity_subtitile">
        <item name="android:background">#00000000</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#C8170B</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">2</item>
        <item name="android:minLines">2</item>
    </style>

    <style name="activity_comment">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="category">
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="activity_price">
        <item name="android:background">#44666666</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FF0000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="filter_subtitle">
        <item name="android:background">#353330</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!-- 活动列表项 -->
    <style name="activity_item_bg">
        <item name="android:paddingLeft">5dip</item>
        <item name="android:background">@anim/item_shape</item>
        <item name="android:paddingRight">10dip</item>
    </style>

    <style name="ticketlist_item_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="baby_btn">
        <item name="android:textSize">14sp</item>
        <item name="android:shadowColor">#4F4F4F</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:textColor">@anim/font_white_black</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@anim/baby_bg</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:text">@string/index_baby</item>
    </style>

    <style name="index_subtitle">
        <item name="android:textSize">18sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/product_itemicon</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="search_subtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- 用户中心布局背景——top -->
    <style name="usercenter_layout_top">
        <item name="android:paddingLeft">20dip</item>
        <item name="android:paddingRight">20dip</item>
        <item name="android:paddingTop">20dip</item>
        <item name="android:background">@anim/layout_top_bg</item>
    </style>

    <!-- 用户中心布局背景——middle -->
    <style name="usercenter_layout_middle">
        <item name="android:paddingLeft">20dip</item>
        <item name="android:paddingRight">20dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@anim/layout_middle_bg</item>
    </style>

    <!-- 用户中心布局背景——bottom -->
    <style name="usercenter_layout_bottom">
        <item name="android:paddingLeft">20dip</item>
        <item name="android:paddingRight">20dip</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:background">@anim/layout_bottom_bg</item>
    </style>
    <!-- 用户注册页面——single -->
    <style name="layout_bg_single">
        <item name="android:paddingLeft">20dip</item>
        <item name="android:background">@anim/layout_single_bg</item>
        <item name="android:paddingRight">20dip</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!-- 会员中心——bg -->
    <style name="center_bg">
        <item name="android:paddingLeft">20dip</item>
        <item name="android:background">@anim/center_bg</item>
        <item name="android:paddingRight">20dip</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="goodsdetails_text">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="Theme.Translucent" parent="android:style/Theme.Translucent">
        <item name="android:windowBackground">@drawable/translucent_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorForeground">#fff</item>
    </style>

    <style name="dialog_animation">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>

</resources>