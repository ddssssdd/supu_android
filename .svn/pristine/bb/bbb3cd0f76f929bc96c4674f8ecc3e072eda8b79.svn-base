<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/vipScrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dip"
                android:paddingTop="10dip" >

                <ImageView
                    android:layout_marginTop="3dip"
                    android:id="@+id/userPhoto"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_marginLeft="20dip"
                    android:src="@drawable/userphoto" 
                    android:scaleType="fitCenter"
                    android:background="@drawable/userphoto1"
                    />

                <RelativeLayout
                    android:layout_marginLeft="5dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/userPhoto"
				  >

                    
                    <TextView
                        android:id="@+id/vipName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用户名："
                        android:textColor="#000000"
                        android:textSize="12dip"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_marginTop="2dip"
                        android:layout_below="@+id/vipName"
                        android:id="@+id/vipScores"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="积分："
                        android:textColor="#000000"
                        android:textSize="12dip"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_marginTop="2dip"
                        android:id="@+id/vipPrice"
                        android:layout_below="@+id/vipScores"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="现金账户余额："
                        android:textColor="#000000"
                        android:textSize="12dip"
                        android:textStyle="bold" />
                    <ImageView
                        android:layout_marginTop="2dip"
                        android:id="@+id/ViplayoutTop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/vipName"
                         />
					
                </RelativeLayout>
               
                
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="#000000" >
                </View>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_order"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:background="@anim/noshapge_item_bg"
                android:gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/order"
                    android:paddingLeft="20dip"
                    android:text="   我的订单"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingRight="20dip"
                    android:paddingTop="5dip"
                    android:src="@drawable/usercenter_arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="#000000" >
                </View>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_collect"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:background="@anim/noshapge_item_bg"
                android:gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/collect"
                    android:paddingLeft="20dip"
                    android:text="  我的收藏"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <ImageView
                    android:paddingRight="20dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingTop="5dip"
                    android:src="@drawable/usercenter_arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="#000000" >
                </View>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_message"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:background="@anim/noshapge_item_bg"
                android:gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/instation"
                    android:paddingLeft="20dip"
                    android:text="  站内消息"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <ImageView
                    android:paddingRight="20dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingTop="5dip"
                    android:src="@drawable/usercenter_arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="#000000" >
                </View>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_preferential"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:background="@anim/noshapge_item_bg"
                android:gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dip"
                    android:drawableLeft="@drawable/preferential"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dip"
                    android:text="   我的优惠劵"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <ImageView
                    android:paddingRight="20dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingTop="5dip"
                    android:src="@drawable/usercenter_arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="#000000" >
                </View>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_adress"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:background="@anim/noshapge_item_bg"
                android:gravity="center" >

                <TextView
                    android:id="@+id/collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dip"
                    android:drawableLeft="@drawable/adress"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dip"
                    android:text="    地址管理"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <ImageView
                    android:paddingRight="20dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingTop="5dip"
                    android:src="@drawable/usercenter_arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="#000000" >
                </View>
            </RelativeLayout>

            <cc.android.supu.view.IndexEcpandableListView
                android:id="@+id/userproductgoods"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:cacheColorHint="#00000000"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:groupIndicator="@null" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>