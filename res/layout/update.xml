<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="30dip"
    android:gravity="center"
    android:orientation="vertical" >
    
    <ImageView 
        android:id="@+id/update_supu_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/supu_logo_big_update"/>
    
    <TextView 
        android:id="@+id/update_Version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:layout_marginBottom="40dip"
        android:textColor="#343331"
        android:textStyle="bold"
        android:shadowDy="5.0"
      	android:textSize="14sp"
        android:text="当前版本：速普商城for Android 版本1.0"/>
	
    
    <TextView 
        android:id="@+id/update_updateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@anim/logistics_bg"
        android:textColor="@anim/font_white_black"
        android:gravity="center"
        android:visibility="gone"
        android:text="更新"/>
</LinearLayout>