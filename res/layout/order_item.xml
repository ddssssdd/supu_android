<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@anim/noshapge_item_bg"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dip"
         >

        <TextView
            android:id="@+id/OrderSN_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:paddingTop="5dip"
            android:text="订单号："
            android:textColor="#000000"
            android:textSize="13dip" />
         <TextView
            android:id="@+id/OrderSN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/OrderSN_a"
            android:paddingTop="5dip"
            android:text="  123123123"
            android:textColor="#000000"
            android:textSize="13dip" />

        <TextView
            android:id="@+id/OrderAmount_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dip"
            android:layout_marginLeft="20dip"
            android:text="总价："
            android:textColor="#000000"
            android:textSize="13dip" />
        <TextView
            android:id="@+id/OrderAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dip"
            android:layout_toRightOf="@+id/OrderAmount_a"
            android:text="  350"
            android:textColor="#000000"
            android:textSize="13dip" />

        <TextView
            android:id="@+id/OrderAddTime_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:paddingTop="35dip"
            android:text="下单时间："
            android:textColor="#000000"
            android:textSize="13dip" />
        <TextView
            android:id="@+id/OrderAddTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="35dip"
            android:layout_toRightOf="@+id/OrderAddTime_a"
            android:text="  2012-01-20"
            android:textColor="#000000"
            android:textSize="13dip" />
        <TextView
            android:id="@+id/OrderStatus_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:textColor="#000000"
            android:textSize="13dip" 
            android:paddingTop="50dip"
            android:text="状态："
            />
          <TextView
            android:id="@+id/OrderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/OrderStatus_a"
            android:textColor="#FF0000"
            android:textSize="13dip" 
            android:paddingTop="50dip"
            android:text="  订单未确认"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="20dip"
            android:src="@drawable/usercenter_arrow" />
        
       
    </RelativeLayout>

</LinearLayout>