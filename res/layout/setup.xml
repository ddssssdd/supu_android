<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

        <RelativeLayout
            android:id="@+id/setuplayTop"
            style="@style/usercenter_layout_top"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip" >

            <TextView
                android:layout_marginTop="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:gravity="center"
                android:text="图片缓存"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/setUpClear"
                android:layout_width="85dip"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="17dip"
                android:background="@anim/clear_btn"
                android:text="清  空"
                android:textColor="@anim/font_white_black" />
        </RelativeLayout>
  
        <RelativeLayout
            android:id="@+id/setuplayMiddle"
            style="@style/usercenter_layout_middle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/setuplayTop" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:gravity="center"
                android:layout_marginTop="5dip"
                android:text="列表图片显示"
                android:textColor="#000000"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/SetImageShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp" 
                android:visibility="gone"
                />
            <cc.android.supu.view.MySlipSwitch
                android:id="@+id/myslipswitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp" 

                />
                
        </RelativeLayout>

        <RelativeLayout
            style="@style/usercenter_layout_bottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/setuplayMiddle" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:gravity="center"
                android:text="推送通知"
                android:textColor="#000000"
                android:textSize="16sp" />
 			<TextView
                android:id="@+id/SetMessageSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp" 
                android:visibility="gone"
                />
           <cc.android.supu.view.MySlipSwitch
                android:id="@+id/myslipswitch_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dip"
                android:layout_marginRight="20dp"
                
                 />
                 
        </RelativeLayout>
       
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" >
    </RelativeLayout>

</LinearLayout>